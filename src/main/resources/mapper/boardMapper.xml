<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mapper.BoardMapper">
<!-- mybatis는 내부에 PreparedStatement 사용한다
insert tag안에 xml주석 사용금지, 
; 사용금지, 
대소문자 주의,
parameter #{title} - title: setString(1,vo.getTitle());
보통 파라미터는 vo사용 -->
  <insert id="boardInsert">
  INSERT INTO BOARD(
    BNO,
    TITLE,
    CONTENT,
    WRITER)
VALUES(
    --SEQ_BNO.NEXTVAL,
    (SELECT NVL(MAX(BNO),0)+1 FROM BOARD),
    #{ title },
    #{ content },
    #{ writer })
  </insert>
</mapper>